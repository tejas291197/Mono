@model MonoOvens.Models.ImporterMaster

@{
    ViewData["Title"] = "EditImporter";
}

<h2>Edit Importer</h2>


@*<div class="row">
    <div class="col-md-4">*@
<div class="row">
    <div>
        <span id="nameError" style="color:red"></span>
        <span id="phoneError" style="color:red"></span>
        <p class="form-group text-danger">(*)fields are mandatory</p>
        <form asp-action="EditImporter">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group" style="float:left ; padding-right:50px ">
                <label asp-for="ImporterName" class="control-label">Importer Name</label><span style="color:red"> *</span>
                <input asp-for="ImporterName" class="form-control" id="iname" required />
                <span asp-validation-for="ImporterName" class="text-danger"></span>
            </div>
            <div class="form-group" style="float:left ; padding-right:50px ">
                <label asp-for="ImporterPhone" class="control-label">Importer Phone</label><span style="color:red"> *</span>
                <input asp-for="ImporterPhone" class="form-control" id="phone" required />
                <span asp-validation-for="ImporterPhone" class="text-danger"></span>
            </div>
            <div class="form-group" style="float:left ; padding-right:50px ">
                >
                <label asp-for="ImporterRegion" class="control-label">Importer Region</label><span style="color:red"> *</span>
                <input asp-for="ImporterRegion" class="form-control" required />
                <span asp-validation-for="ImporterRegion" class="text-danger"></span>
            </div>
            <div class="form-group" style="float:left ; padding-right:50px ">
                <label asp-for="Email" class="control-label"></label><span style="color:red"> *</span>
                <input asp-for="Email" class="form-control" type="email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group" style="float:left ; padding-right:50px ">
                <label asp-for="Region" class="control-label"></label>
                <input asp-for="Region" class="form-control" />
                <span asp-validation-for="Region" class="text-danger"></span>
            </div>
            <div class="form-group" style="float:left ; padding-right:50px ">
                <label asp-for="Area" class="control-label"></label>
                <input asp-for="Area" class="form-control" />
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>

            <div class="form-group" style="clear:left ; padding-right:50px " align="center">
                <input type="submit" value="Save" class="btn btn-success" id="subbtn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ImporterList">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>

        // to allow only digits to be entered from the user side.
        function Digits(e) {
            if (e.which != 8 && e.which != 0 && (e.which < 48 || e.which > 57)) {
                //display error message
                $("#phoneError").html(" **** Only Digits Allowed **** ").show().fadeOut("slow");
                return false;
            }
        }

        // to allow only charactors to be entered from the user side .
        function Charactors(e) {
            var key = e.keyCode;
            if (!((key == 8) || (key == 9) || (key == 32) || (key == 46) || (key >= 35 && key <= 40) || (key >= 65 && key <= 90) || (key >= 97 && key <= 122)    ) ) {
                e.preventDefault();
                $("#nameError").html(" **** Only Charactors Allowed **** ").show().fadeOut("slow");
            }
        }
        $(document).ready(function () {
            $("#phone").keypress(function (e) {
                return Digits(e);
            });
            $("#iname").keypress(function (e) {
                Charactors(e);
            });
            

        });
    </script>
}
