@model IEnumerable<MonoOvens.Models.AssetMaster>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AssetCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssetType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ControllerType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Controllers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trays)
            </th>
            <th>
               TraySize_inch
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Handed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Format)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Power)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PowerConsumption)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AssetCategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssetType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ControllerType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Controllers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrayHeight_inch)  &Chi;  @Html.DisplayFor(modelItem => item.TrayWidth_inch)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Handed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Format)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Power)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PowerConsumption)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
