@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>
        // to allow only digits to be entered from the user side .
        function Digits(e) {
           if (e.which != 8 && e.which != 0 && (e.which < 48 || e.which > 57)) {
              //display error message
              $("#phoneError").html("Only Digits Allowed").show().fadeOut("slow");
               return false;
           }
       }
       // to allow only charactors to be entered from the user side .
       function Charactors(e) {
            var key = e.keyCode;
            if (!((key == 8) ||  (key == 9) ||  (key == 32) || (key == 46) || (key >= 35 && key <= 40) || (key >= 65 && key <= 90))) {
                e.preventDefault();
            }
       }
       $(document).ready(function () {
           $("#cnum").keypress(function(e)
           {
               return Digits(e);
           });
            $("#cliname").keydown(function(e)
           {
               Charactors(e);
            });
            $("#cname").keydown(function(e)
           {
               Charactors(e);
            });
           $("#city").keydown(function(e)
           {
               Charactors(e);
           });
           $("#area").keydown(function(e)
           {
               Charactors(e);
           });
           $("#sname").keydown(function(e)
           {
               Charactors(e);
           });

         });
</script>
