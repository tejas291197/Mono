<script>
    $('#iname').click(function () {
        var categoryVal = $('#iname option:selected').val();

        //  console.log(categoryVal);
        $.ajax({
            url: '/ControllerModules/GetDelearsListEditfromImporterId',
            method: 'POST',
            data: { id: categoryVal },
            success: function (data) {
                $("#DealerListEdit").empty();
                // $("#atypemain").append("<option value='0'>--Select--</option>");
                $.each(data, function (index, optiondata) {
                    for (var i = 0; i < optiondata.length; i++) {
                        $("#DealerListEdit").append("<option value=" + optiondata[i].id + ">" + optiondata[i].dealerName + "</option>")
                        // $("#atypemain").append($("<option />").val(optiondata[i].id).text(optiondata[i].assetType));
